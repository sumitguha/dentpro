!!! 5

%html

  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title= @browser_title || 'DentPro'

    = stylesheet_link_tag('compiled/screen.css', :media => 'screen, projection')
    = stylesheet_link_tag('compiled/print.css', :media => 'print')
    /[if IE]
      = stylesheet_link_tag('compiled/ie.css', :media => 'screen, projection')

    = stylesheet_link_tag ('formtastic', :media => 'screen, projection')
    = stylesheet_link_tag ('formtastic-changes', :media => 'screen, projection')

  %body.bp

    #container

      %a{:name => 'top'}

      #header
        = render :partial => "layouts/header"

      #content

        #content-inner

          #nav
            = render :partial => "layouts/nav"

          #flashes
            = render :partial => "layouts/flashes"

          %br.clear

          = yield

      #footer
        = render :partial => "layouts/footer"

      -# load google JS immediately before the end body tag
      -# so it does not interfere with page render time.
      -# unless request.host.scan('dentpro.com').empty?
      = render :partial => "layouts/ga"

